<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PageLinearLayout"
    tools:context=".activity.KeepWatchCreateRouteActivity">

    <include layout="@layout/sub_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:background="@drawable/keep_watch_shape_white_16"
            android:textSize="16dp"
            android:textColor="#AEAEAE"
            android:hint="请输入路线名称："
            android:id="@+id/keepwatch_route_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:background="@drawable/keep_watch_shape_white_16"
            android:textSize="16dp"
            android:textColor="#AEAEAE"
            android:hint="在这里可加入标志点："
            android:id="@+id/keepwatch_tag"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/keepwatch_add"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/keepwatch_route_desk_list"/>

</LinearLayout>