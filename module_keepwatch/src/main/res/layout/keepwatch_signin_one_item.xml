<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/keepwatch_point"
            android:layout_gravity="center_vertical"
            android:id="@+id/keepwatch_desk_type"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32.5dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="签到点名称"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/keepwatch_desk_name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="22.5dp"
                    android:background="#F5F5F5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="正常"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="#7ED321"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:id="@+id/keepwatch_status"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="22.5dp"
                    android:background="#F5F5F5"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="匹配"
                        android:textColor="#9B9B9B"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="优"
                        android:textColor="#7ED321"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:id="@+id/keepwatch_match_level"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28.25dp"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="昵称"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:id="@+id/keepwatch_nick_name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="日期时间"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:id="@+id/keepwatch_date_time"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EAEAEA"
        android:id="@+id/keepwatch_gray_line"/>
</LinearLayout>