<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/keepwatch_shape_white_10"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/keep_watch_shape_white_gray"
        android:text="1"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:gravity="center"
        android:id="@+id/keepwatch_position"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:background="@drawable/keep_watch_shape_white_gray"
        android:text="昵称"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:gravity="center"
        android:id="@+id/keepwatch_nick_name"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/keep_watch_shape_white_gray"
        android:text="分数"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:gravity="center"
        android:id="@+id/keepwatch_score"/>
</LinearLayout>