<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.KeepWatchAssignmentListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_100"
        style="@style/Theme.AppCompat.Light"
        android:elevation="0dp">

<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/user_invite_toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp"-->
<!--            app:layout_scrollFlags="scroll|enterAlways">-->

<!--        </androidx.appcompat.widget.Toolbar>-->
        <include layout="@layout/sub_top_bar"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/keepwatch_assignment_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="53.5dp"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/TabLayoutNormalTextStyle"
            app:tabSelectedTextColor="#50A2FF"
            app:tabIndicatorColor="#50A2FF">

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/keepwatch_assignment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/user_shape_blue_white_15"
            android:text="转移"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/keepwatch_transfer"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/user_shape_blue_white_15"
            android:text="收回"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/keepwatch_take_back"/>
    </LinearLayout>
</LinearLayout>