<resources>
    <style name="BottomDialog" parent="android:Animation">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slid_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slid_down</item>
    </style>
    <style name="KeepWatchElseHeightEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="KeepWatchElseWidthEdit">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="KeepWatchContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>
    <style name="KeepWatchDescText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>
    <style name="KeepWatchElseContentText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>
    <style name="KeepWatchBlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/color_white_100</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@drawable/keepwatch_blue_btn_bg_100</item>
    </style>
    <style name="KeepWatchSettingListOneItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="KeepWatchSettingSetImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:src">@mipmap/ic_right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="KeepWatchSpcCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:drawableLeft">@drawable/keepwatch_spc_cb</item>
        <item name="android:button">@null</item>
    </style>
</resources>