<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="2.75dp">

        <ImageView
            android:id="@+id/calendar_last_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12.25dp"
            android:src="@mipmap/blue_left"/>

        <TextView
            android:id="@+id/calendar_year_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="2020"
            android:textColor="#278CFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/calendar_next_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12.25dp"
            android:src="@mipmap/blue_right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_1"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:gravity="center"
                android:text="1月"
                android:textSize="11sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_2"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:gravity="center"
                android:text="2月"
                android:textSize="11sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_3"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="3月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_4"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="4月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_5"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="5月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_6"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="6月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginBottom="16.25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_7"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="7月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_8"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="8月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_9"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="9月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_10"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="10月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_11"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="11月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/calendar_month_12"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:text="12月"
                android:textSize="11sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>