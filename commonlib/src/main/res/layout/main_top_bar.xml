<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#278CFF"
    android:layout_height="56dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/top_information_rl">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/information"
                android:layout_marginStart="16dp"/>
            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/unread_remind_point_bg"
                android:text="9+"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginStart="34dp"
                android:visibility="gone"
                android:id="@+id/information_unread_count"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/top_tittle_ll">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:id="@+id/top_tittle"/>
            <ImageView
                android:layout_width="9dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/top_tittle"
                android:id="@+id/top_select"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/top_addition"/>
    </LinearLayout>

</LinearLayout>