<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".activity.NoticeActivity">

    <include layout="@layout/sub_top_bar" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="标题"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/user_notice_tittle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="无"
        android:textColor="#4A4A4A"
        android:textSize="14sp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/user_notice_desc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="姓名"
            android:textColor="#4A4A4A"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:id="@+id/user_release_nick_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="时间"
            android:textColor="#4A4A4A"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:id="@+id/user_release_date_time"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/user_notice_read_status_list" />

</LinearLayout>