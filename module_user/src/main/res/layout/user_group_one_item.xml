<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/user_group_head_img"
            android:src="@mipmap/user_group_member_head"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/user_group_name"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="第五园消防巡检群"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user_admin"
            android:id="@+id/group_admin_img"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>

    <include layout="@layout/gray_line_style" />

</LinearLayout>