<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GroupAddMemberActivity">

    <include layout="@layout/user_sub_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/user_shape_white_10"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+86"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#AEAEAE"
            android:hint="请输入手机号："
            android:inputType="phone"
            android:background="@null"
            android:layout_marginLeft="37dp"
            android:id="@+id/keepwatch_desk_id"/>
    </LinearLayout>


    <TextView
        android:layout_width="298dp"
        android:layout_height="42dp"
        android:background="@drawable/user_shape_blue_8"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:id="@+id/user_confirm"/>

</LinearLayout>