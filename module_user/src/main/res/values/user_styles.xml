<resources>

    <style name="UserTopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserTopBarImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_back</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="UserTopBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="UserTopBarRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>

    </style>

    <style name="UserListLeftTittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/user_text_setting_val</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="UserListRightImg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/user_default_head</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="UserListRightGoSet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/ic_right</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="UserListRightTextGray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_edit_hint</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="UserListRightTextBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="UserListOneItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserTittleInPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="UserBlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/color_white_100</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@drawable/user_login_submit_btn_bg_100</item>
    </style>

    <style name="UserFullWidthEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="UserElseWidthEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="UserContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>

    <style name="UserContentImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="UserPromptText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <style name="UserElseWidthText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="UserStickoutText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/user_text_blue</item>
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <style name="TabLayoutNormalTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="TabLayoutSelectTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#50A2FF</item>
    </style>

</resources>
