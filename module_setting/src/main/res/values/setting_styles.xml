<resources>
    <style name="SettingTopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingTopBarImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_back</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SettingTopBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SettingTopBarRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>
    </style>

    <style name="SettingElseWidthText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="SettingListOneItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_black_100</item>
    </style>

    <style name="SettingSetImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_right</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
