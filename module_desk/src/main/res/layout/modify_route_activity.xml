<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PageLinearLayout"
    tools:context="com.ctfww.module.desk.activity.CreateRouteActivity">

    <include layout="@layout/sub_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rectangle_shape_white_16"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:textSize="16dp"
            android:textColor="#AEAEAE"
            android:hint="请输入路线名称："
            android:id="@+id/route_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_shape_blue_94c5fe_10"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:id="@+id/dist_ll">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="100米"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/dist"/>
    </LinearLayout>

</LinearLayout>