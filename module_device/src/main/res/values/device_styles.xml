<resources>

    <style name="DeviceBlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/color_white_100</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@drawable/device_blue_btn_bg_100</item>
    </style>

    <style name="DeviceTopBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DeviceTopBarImg">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_back</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DeviceTopBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DeviceTopBarRightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>

    </style>

    <style name="DeviceListOneItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DeviceTittleInPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DeviceFullWidthEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DeviceElseWidthEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DeviceContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
    </style>

    <style name="DeviceContentImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DevicePromptText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black_100</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <style name="DeviceElseWidthText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
