<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_shape_white_10"
    android:orientation="horizontal"
    android:layout_marginTop="14dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35.5dp"
            android:layout_marginTop="17.75dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="22.5dp"
                android:src="@drawable/desk"
                android:id="@+id/desk_type"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="签到点名称"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:id="@+id/desk_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="次数"
                android:textSize="16sp"
                android:textColor="#4A4A4A"
                android:textStyle="bold"
                android:id="@+id/frequency"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="18.25dp"
                android:src="@drawable/default_head"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="昵称"
                android:textSize="13sp"
                android:textColor="#4A4A4A"
                android:layout_marginLeft="4dp"
                android:id="@+id/nick_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="日期时间"
                android:textSize="13sp"
                android:textColor="#4A4A4A"
                android:id="@+id/date_time"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>