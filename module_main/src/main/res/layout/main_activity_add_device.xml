<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color_main_page_bg"
    tools:context=".activity.AddDeviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/main_add_device_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back_white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_add_device_page_title"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/color_white_100"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_01">

        <TextView
            style="@style/main_add_device_content_layout_01_text_view"
            android:text="@string/main_add_device_page_device_id" />

        <EditText
            style="@style/main_add_device_content_layout_01_edit_text"
            android:hint="@string/main_add_device_page_device_id_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_02">

        <TextView
            style="@style/main_add_device_content_layout_02_text_view"
            android:text="@string/main_add_device_page_group_id" />

        <TextView
            style="@style/main_add_device_content_layout_02_text_view_2"
            android:text="@string/main_add_device_page_group_id_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_02">

        <TextView
            style="@style/main_add_device_content_layout_02_text_view"
            android:text="@string/main_add_device_page_type" />

        <TextView
            style="@style/main_add_device_content_layout_02_text_view_2"
            android:text="@string/main_add_device_page_type_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_01">

        <TextView
            style="@style/main_add_device_content_layout_01_text_view"
            android:text="@string/main_add_device_page_name" />

        <EditText
            style="@style/main_add_device_content_layout_01_edit_text"
            android:hint="@string/main_add_device_page_name_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_01">

        <TextView
            style="@style/main_add_device_content_layout_01_text_view"
            android:text="@string/main_add_device_page_longitude" />

        <EditText
            style="@style/main_add_device_content_layout_01_edit_text"
            android:hint="@string/main_add_device_page_longitude_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_01">

        <TextView
            style="@style/main_add_device_content_layout_01_text_view"
            android:text="@string/main_add_device_page_latitude" />

        <EditText
            style="@style/main_add_device_content_layout_01_edit_text"
            android:hint="@string/main_add_device_page_latitude_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_01">

        <TextView
            style="@style/main_add_device_content_layout_01_text_view"
            android:text="@string/main_add_device_page_address" />

        <EditText
            style="@style/main_add_device_content_layout_01_edit_text"
            android:hint="@string/main_add_device_page_address_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <LinearLayout style="@style/main_add_device_content_layout_01">

        <TextView
            style="@style/main_add_device_content_layout_01_text_view"
            android:text="@string/main_add_device_page_sim" />

        <EditText
            style="@style/main_add_device_content_layout_01_edit_text"
            android:hint="@string/main_add_device_page_sim_hint" />

    </LinearLayout>

    <include layout="@layout/main_add_device_page_divider_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="#4E5A7C"
        android:textSize="@dimen/text_size_12sp"
        android:text="@string/main_add_device_page_tips"
        />

    <Button
        android:layout_width="298dp"
        android:layout_height="42dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/main_shape_add_device_page_btn_bg"
        android:text="@string/main_add_device_page_bottom_btn_str"
        android:textColor="@color/color_white_100"
        android:textSize="@dimen/text_size_16sp"
        />

</LinearLayout>