<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_color_main_page_bg"
    tools:context=".activity.StatusDeviceListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/main_status_device_list_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back_white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/main_status_device_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_device_list_page_title"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/color_white_100"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/status_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>