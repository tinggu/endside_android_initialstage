<resources>







    <!--添加设备界面元素style-->
    <style name="main_add_device_content_layout_01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="main_add_device_content_layout_01_text_view">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white_100</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="main_add_device_content_layout_01_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_white_100</item>
        <item name="android:textColorHint">#4E5A7C</item>
    </style>


    <style name="main_add_device_content_layout_02">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="main_add_device_content_layout_02_text_view">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white_100</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="main_add_device_content_layout_02_text_view_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#4E5A7C</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:drawableEnd">@mipmap/ic_right</item>
    </style>







</resources>
