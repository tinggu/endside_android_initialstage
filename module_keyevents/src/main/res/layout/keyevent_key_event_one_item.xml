<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/keyevent_shape_white_10"
    android:orientation="vertical"
    android:layout_marginTop="14dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="15.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="22.5dp"
            android:src="@drawable/keyevent_desk"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="签到点名称"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:id="@+id/keyevent_desk_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46.25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="22.5dp"
            android:src="@drawable/keyevent_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="问题标题"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            android:id="@+id/keyevent_key_event_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="18.25dp"
            android:src="@drawable/keyevent_report_person"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="昵称"
            android:textSize="13sp"
            android:textColor="#4A4A4A"
            android:id="@+id/keyevent_nick_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日期时间"
            android:textSize="13sp"
            android:textColor="#4A4A4A"
            android:id="@+id/keyevent_date_time"/>
    </LinearLayout>
</LinearLayout>